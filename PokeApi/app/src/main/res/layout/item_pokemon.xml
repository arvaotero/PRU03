<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_list_corner_background"
        android:elevation="@dimen/elevation_medium"
        android:layout_marginTop="@dimen/margin_mini"
        android:layout_marginBottom="@dimen/margin_mini"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small">


        <LinearLayout
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:orientation="vertical"
            android:padding= "@dimen/padding_small"
            android:background="@drawable/item_list_corner_background_image"
            >
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/default_pokeball"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/placeholder"
            android:textSize="@dimen/textSize"
            android:textColor="@color/colorAccent"
            android:padding="@dimen/padding_large"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="@dimen/icon_miniplus"
            android:layout_height="@dimen/icon_miniplus"
            app:srcCompat="@drawable/ic_arrow_right"
            android:layout_gravity="center"
            android:tint="@color/colorAccent"
            android:layout_marginRight="@dimen/margin_small"
            android:alpha="0.4"
            />


    </LinearLayout>

</LinearLayout>